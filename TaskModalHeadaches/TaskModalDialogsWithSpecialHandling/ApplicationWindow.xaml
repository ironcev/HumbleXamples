<Window x:Class="TheHumbleProgrammer.TaskModalDialogsWithSpecialHandling.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" MinWidth="300" MinHeight="200">
    <StackPanel>
        <Button Click="OnOpenWpfModalDialogWithoutOwnerClick">Open WPF modal dialog without owner.</Button>
        <Button Click="OnOpenWpfModalDialogWithMeAsOwnerClick">Open WPF modal dialog with me as owner.</Button>
        
        <Button Click="OnOpenStandardWinFormsMessageBoxWithoutOwnerClick" Margin="0, 20, 0, 0">Open standard WinForms message box without owner.</Button>
        
        <Button Click="OnOpenStandardWinFormsDialogClick" Margin="0, 20, 0, 0">Open standard WinForms dialog.</Button>
    </StackPanel>
</Window>
